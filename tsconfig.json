{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "esnext",
      "dom.iterable",
      "scripthost"
  ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ]
}

